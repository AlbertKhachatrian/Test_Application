<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Test" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_dark</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/purple_dark</item>
        <item name="colorSecondary">@color/purple_dark</item>
        <item name="colorSecondaryVariant">@color/purple_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Test.HeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    <style name="Test.SubHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purple_light</item>
    </style>

    <style name="Test.BodyText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>
</resources>